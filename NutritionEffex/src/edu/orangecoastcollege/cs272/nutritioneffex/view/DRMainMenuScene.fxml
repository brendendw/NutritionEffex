<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: FFF2E0;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="89.0" prefWidth="700.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Welcome to the dietary restrictions main menu." textAlignment="CENTER">
               <font>
                  <Font name="Impact" size="24.0" />
               </font>
            </Label>
            <Label text="Update your preferences and find out what you can consume.">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#loadUpdatePreferences" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #0080FF; -fx-background-radius: 10;" text="Update Preferences" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <effect>
                  <DropShadow color="#0000005e" />
               </effect>
            </Button>
            <Button mnemonicParsing="false" onAction="#loadFoods" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #0080FF; -fx-background-radius: 10;" text="Foods" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <effect>
                  <DropShadow color="#0000005e" />
               </effect>
            </Button>
            <Button mnemonicParsing="false" onAction="#loadBeverages" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: black; -fx-background-radius: 10;" text="Beverages" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#loadFavoriteFoods" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #0080FF; -fx-background-radius: 10;" text="Favorite Foods" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <effect>
                  <DropShadow color="#0000005e" />
               </effect>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
